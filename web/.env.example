# NEXT_PUBLIC_ Variables (Safe for client-side access)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Next.js Configuration (Server-side only)
NEXTAUTH_SECRET=REPLACE_ME
NEXTAUTH_URL=REPLACE_ME

# ZKPassport Configuration
ZK_PASSPORT_DOMAIN=REPLACE_ME
ZK_PASSPORT_DEV_MODE=REPLACE_ME

# Database Configuration (Server-side only)
DATABASE_URL=REPLACE_ME

# Redis Configuration (for rate limiting in production)
REDIS_URL=redis://localhost:6379

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Verification type expiry times (in minutes) - fallback for backward compatibility
VERIFICATION_EXPIRY_PERSONHOOD=15
VERIFICATION_EXPIRY_AGE=10
VERIFICATION_EXPIRY_NATIONALITY=20
VERIFICATION_EXPIRY_RESIDENCY=25
VERIFICATION_EXPIRY_KYC=30

# Logging
LOG_LEVEL=info

# Discord Bot Integration (for webhooks)
DISCORD_BOT_WEBHOOK_URL=REPLACE_ME

# Environment
NODE_ENV=development