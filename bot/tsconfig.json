{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/dist/shared/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../shared/dist/shared/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}