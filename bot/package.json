{
  "name": "zk-discord-verifier-bot",
  "version": "1.0.0",
  "description": "Discord bot for ZKPassport admin verification system",
  "main": "dist/index.js",
  "author": "ZKPassport Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development dotenv -e .env.development -- nodemon --exec tsx ./src/index.ts",
    "build": "cross-env NODE_ENV=production dotenv -e .env.production -- tsc",
    "start": "cross-env NODE_ENV=production dotenv -e .env.production -- node dist/index.js",
    "register-commands": "tsx ./src/scripts/register-commands.ts",
    "format": "prettier --write \"**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@types/express": "^5.0.3",
    "@types/uuid": "^11.0.0",
    "better-sqlite3": "^9.6.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "envsafe": "^2.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "joi": "^18.0.1",
    "node-cron": "^3.0.3",
    "rate-limiter-flexible": "^8.1.0",
    "tweetnacl": "^1.0.3",
    "uuid": "^13.0.0",
    "zk-discord-verifier-shared": "file:../shared",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.2",
    "@types/node-cron": "^3.0.11",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "nodemon": "^3.0.0",
    "prettier": "^3.3.1",
    "prisma": "^6.17.1",
    "ts-jest": "^29.1.2",
    "tsx": "^4.12.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}